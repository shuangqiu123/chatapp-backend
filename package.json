{
	"name": "chatapp-backend",
	"version": "1.0.0",
	"description": "The backend of the chatapp for the assignment COMP90018",
	"main": "build/index.js",
	"private": true,
	"scripts": {
		"clean": "rimraf build/*",
		"lint": "eslint --cache --max-warnings=0 --ext .js,.jsx,.ts,.tsx ./src",
		"lint:fix": "eslint --cache --fix --ext .js,.jsx,.ts,.tsx ./src",
		"tsc": "tsc",
		"build": "npm-run-all clean lint tsc",
		"dev:start": "npm-run-all build start",
		"prod:start": "node -r dotenv/config . dotenv_config_path=.env.production",
		"dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
		"prod": "npm-run-all build prod:start",
		"start": "node -r dotenv/config . dotenv_config_path=.env.development",
		"prepare": "husky install"
	},
	"license": "ISC",
	"devDependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.13",
		"@types/joi": "^17.2.3",
		"@types/node": "^16.9.1",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"eslint": "^7.32.0",
		"husky": "^7.0.2",
		"install": "^0.13.0",
		"npm": "^7.23.0",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/express-pino-logger": "^4.0.2",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/mongoose": "^5.11.97",
		"@types/pino": "^6.3.11",
		"bcrypt": "^5.0.1",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-pino-logger": "^6.0.0",
		"joi": "^17.4.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.0.7",
		"nodemon": "^2.0.12",
		"npm-run-all": "^4.1.5",
		"pino": "^6.13.2",
		"rimraf": "^3.0.2",
		"stream-chat": "^4.2.0",
		"typescript-eslint": "0.0.1-alpha.0"
	}
}